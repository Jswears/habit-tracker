<%- include('../partials/userNav') %>

<main>
  <div id="main-container">
    <div id="add-habit">
      <form action="/userProfile/habits/create" method="POST">
        <label>
          <input type="text" name="name" placeholder="Add a habit" />
        </label>
        <button type="submit">Add Habit</button>
      </form>
      <% habitList.forEach(habit => { %>
      <div class="habit-cards">
        <form
          action="/userProfile/habits/<%= habit._id %>/delete"
          method="POST"
        >
          <button type="submit" class="hovering">
            <img src="/images/967564a359c9dced95fb88c0ccb7cb02.png" alt="delete-icon" style="width: 12px; height: 15px" />
          </button>
        </form>
        <p><%= habit.name %></p>
        <form action="/userProfile/habits/<%= habit._id %>/edit" method="GET">
          <button type="submit" class="hovering">
            <img src="/images/icons8-edit-24.png" alt="edit-icon" style="width: 12px; height: 15px" />
          </button>
        </form>
      </div>
      <% }) %>
    </div>
    <div id="add-daily">
      <form action="/userProfile/daily/create" method="POST">
        <label>
          <input type="text" name="name" placeholder="Add a Daily" />
        </label>
        <button type="submit">Add Daily</button>
      </form>
      <% dailyHabits.forEach(daily => { %>
      <div class="daily-cards">
        <form action="/userProfile/daily/<%= daily._id %>/delete" method="POST">
          <button type="submit" class="hovering">
            <img src="/images/967564a359c9dced95fb88c0ccb7cb02.png" alt="delete-icon" style="width: 12px; height: 15px" />
          </button>
        </form>
        <p><%= daily.name %></p>
        <form action="/userProfile/daily/<%= daily._id %>/edit" method="GET">
          <button type="submit" class="hovering">
            <img src="/images/icons8-edit-24.png" alt="edit-icon" style="width: 12px; height: 15px" />
          </button>
        </form>
      </div>
      <% }) %>
    </div>
    <div id="add-todo">
      <form action="/userProfile/todo/create" method="POST">
        <label>
          <input type="text" name="name" placeholder="Add a To Do" />
        </label>
        <button type="submit">Add To Do</button>
      </form>
      <% todoItems.forEach(item => { %>
      <div class="todo-cards">
        <form action="/userProfile/todo/<%= item._id %>/delete" method="POST">
          <button type="submit" class="hovering">
            <img src="/images/967564a359c9dced95fb88c0ccb7cb02.png" alt="delete-icon" style="width: 12px; height: 15px" />
          </button>
        </form>
        <p><%= item.name %></p>
        <form action="/userProfile/todo/<%= item._id %>/edit" method="GET">
          <button type="submit" class="hovering">
            <img src="/images/icons8-edit-24.png" alt="edit-icon" style="width: 12px; height: 15px" />
          </button>
        </form>
      </div>
      <% }) %>
    </div>
  </div>
</main>