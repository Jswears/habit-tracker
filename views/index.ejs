<% if (isLoggedIn) { %> <%- include('./partials/userNav') %>
<h1>BIENVENIDOS</h1>
<% } else { %>
<div id="container">
  <div class="left">
    <img
      src="images/pexels-lazaro-rodriguez-jr-6945926.jpg"
      alt="Image"
      width="200"
    />
    <h2>Hello</h2>
  </div>
  <div class="right">
    <div class="slogan">
      <h1>Motivate yourself to achieve your goals.</h1>
      <p>
        It's time to have fun when you get things done! Join over 4 million
        Trackifyers and improve your life one task at a time.
      </p>
    </div>
    <div class="row">
      <h2 class="signup">Sign Up For Free</h2>
      <form
        class="col s12 formHome"
        action="/auth/signup"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="row">
          <div class="input-field col s12">
            <input
              type="text"
              name="username"
              id="username"
              placeholder="Username"
              required
            />
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input
              type="email"
              name="email"
              id="email"
              placeholder="Email"
              required
            />
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input
              type="password"
              name="password"
              id="password"
              placeholder="Password"
              required
            />
          </div>
        </div>
        <div class="row">
          <div class="file-field input-field col s12">
            <div class="btn">
              <span>Choose Image</span>
              <input
                type="file"
                name="image"
                accept="image/png, image/jpg"
                required
              />
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text" />
            </div>
          </div>
        </div>
        <p>
          <label>
            <input type="checkbox" required />
            <span
              >I have read and agree to the Terms of Service and Privacy
              Policy</span
            >
          </label>
        </p>
        <button
          class="btn waves-effect waves-light"
          type="submit"
          name="action"
        >
          Sign Up
        </button>
      </form>
    </div>
  </div>
</div>
<% } %>
